<Window x:Class="ComsTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:comsTest="clr-namespace:ComsTest"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListView ItemsSource="{Binding Drivers, UpdateSourceTrigger=PropertyChanged}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate DataType="comsTest:Driver">
                                <ToggleButton Content="{Binding PenalizeText, UpdateSourceTrigger=PropertyChanged}" 
                                              IsChecked="{Binding IsPenalizing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Command="{Binding PenalizeCommand}">
                                </ToggleButton>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
